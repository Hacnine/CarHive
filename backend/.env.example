# Environment variables template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL="mongodb://localhost:27017/carhive"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration - Updated for Vite default port
# You can provide multiple comma-separated origins for development
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Hold Booking Duration (minutes)
HOLD_MINUTES=15

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@carhive.com

# Twilio Configuration (Optional - for SMS notifications)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Stripe Configuration (Optional - for payments)
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Admin Configuration (for SOS and incident alerts)
# ADMIN_EMAIL=admin@carhive.com
# ADMIN_PHONE=+15555555555

# MongoDB Atlas (Alternative - uncomment and use instead of local MongoDB)
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/carhive?retryWrites=true&w=majority"